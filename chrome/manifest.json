{
  "name": "Chrome Server",
  "description": "Socket server in Chrome",
  "version": "0.1",
  "app": {
    "background": {
        "persistent": false,
        "scripts": ["background/js/index.js"]
    }
  },
  "icons": {
    "16": "background/images/icon-16.png",
    "128": "background/images/icon-128.png" 
  },
   "sockets": {
    "tcpServer": {
        "listen": "0.0.0.0:*"
    } 
  },
  "permissions": [
    {
        "mediaGalleries": ["read", "allAutoDetected"] 
    },
    "storage",
    "unlimitedStorage"
  ]
}